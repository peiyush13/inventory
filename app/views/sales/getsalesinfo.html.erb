 <div class="modal-body">
    <div class="container-fluid">
        <div class="form-group">
        <table class="table table-hover">
            <thead>
            <tr>
                <th>Item Name</th>
                <th>Item Price</th>
                <th>Quantity</th>
            </tr>
            </thead>
            <tbody>
            <% if @single_sales_info %>
                <% @single_sales_info.each  do  |sale| %>
                    <tr>
                        <td><%= sale[:item_name] %></td>
                        <td><%= sale[:MRP] %></td>
                        <td><%= sale[:stock] %></td>
                    </tr>
                <% end %>
            <% end %>
            </tbody>
        </table>
        </div>
    </div>
</div>